<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_dialog_alert"
    android:clickable="true"
    android:gravity="center"
    android:minWidth="268.5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10.8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="27.8dp">

        <TextView
            android:id="@+id/alert_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="7.5sp"
            android:textColor="#313131"
            android:textSize="15sp"
            tools:text="로그아웃하면 글쓰기, 댓글 쓰기가 제한되며 알림을 받지 못합니다. 계속 진행하시겠습니까?" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alert_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:text="아니오" />

        <TextView
            android:id="@+id/alert_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:text="네" />
    </LinearLayout>
</LinearLayout>